@using System.Web.Optimization

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Styles.Render("~/Areas/AdminPanel/Content/style")
    @Styles.Render("~/Areas/AdminPanel/Content/materialDesignIcons")
    @Styles.Render("~/Areas/AdminPanel/Content/base")

    @Scripts.Render("~/Areas/AdminPanel/bundles/modernizr")
</head>
<body>
    <div class="container-scroller">
        <!-- Navigation -->
        <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            @Html.Partial("_Navigation")
        </nav>

        <!-- Page Body -->
        <div class="container-fluid page-body-wrapper">
            <!-- Sidebar -->
            <aside class="sidebar sidebar-offcanvas" id="sidebar">
                @Html.Partial("_Sidebar")
            </aside>

            <!-- Main view -->
            <section class="main-panel">
                @RenderBody()
                <!-- Footer -->
                @Html.Partial("_Footer")
            </section>
        </div>
    </div>

    <!-- Section for main scripts render -->
    @Scripts.Render("~/Areas/AdminPanel/bundles/jquery")
    @Scripts.Render("~/Areas/AdminPanel/bundles/bootstrap")

    <!-- Template JS-->
    @Scripts.Render("~/Areas/AdminPanel/Content/js/base")
    @Scripts.Render("~/Areas/AdminPanel/Content/js/misc")

    <!-- Handler for local scripts -->
    @RenderSection("scripts", required: false)
</body>
</html>