
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<ElectronicsShop.Domain.Entities.User>


<html>
<head>
    <title>Users List</title>
</head>
<body>
    <div class="row">
        <div class="users-table-box">
            <h1>Users List</h1>
            <table id="myTable" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>User ID</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Role</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>

<style>
    .row {
        background-color: #F5F5F5; /* Set the background color of the row */
        padding: 20px;
        padding-left: 40px;
        padding-right: 40px;
    }

    .users-table-box {
        background-color: #FFFFFF; /* Set the background color of the left box */
        border-radius: 10px;
        padding: 20px;
    }
</style>
